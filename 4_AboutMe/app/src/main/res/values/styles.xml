<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="NameStyle">
        <item name="android:layout_marginTop">@dimen/layout_margin</item>
        <item name="android:fontFamily">@font/annie_use_your_telescope</item>
        <item name="android:paddingTop">@dimen/small_padding</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BioText" parent="NameStyle">
        <item name="android:fontFamily">@font/annie_use_your_telescope</item>
        <item name="android:padding">@dimen/small_padding</item>
        <item name="android:textSize">25sp</item>
         <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="button_style">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/annie_use_your_telescope</item>
        <item name="android:layout_marginTop">@dimen/small_padding</item>
    </style>
</resources>